<div class="list-wrap">
<% @lists.each do |list| %>
    <div class="list-box">
        <% if list.image.attached? %>
            <%= image_tag list.image, size: "200x200" %>
        <% else %>
            <%= image_tag 'no_image', siza: "200x200" %>
        <% end %>
        <div class="list-comment">
            <spen class="list-body"><%= list.body %></spen>
            <spen class="list-title"><%=link_to list.title, list_path(list.id) %></spen>
        </div>
    </div>
<% end %>
</div>


